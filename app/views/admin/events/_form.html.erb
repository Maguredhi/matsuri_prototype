<%= form_with model: [:admin, @event] do |form| %>

  <div class="form-control mb-2">
    <%= form.label :title do %>
      <span class="label-text text-lg">Title</span>
    <% end %>
    <%= form.text_field :title, class: 'input input-bordered w-1/2 bg-white' %>
  </div>

  <div class="form-control mb-2">
    <%= form.label :category do %>
      <span class="label-text text-lg">Category</span>
    <% end %>
    <div class="flex justify-start">
      <%= form.radio_button :category, 'option1', class: 'radio' %> 見る
      <%= form.radio_button :category, 'option2', class: 'radio ml-2' %> 食べる
      <%= form.radio_button :category, 'option3', class: 'radio ml-2' %> 買う
      <%= form.radio_button :category, 'option4', class: 'radio ml-2' %> 体験する
    </div>
  </div>

  <%= form.label :category, "category", class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400' %>
  <%= form.text_field :category, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' %> <br />

  <%= form.label :content, "content", class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400' %>
  <%= form.text_area :content, rows: 20, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' %> <br />

  <%= form.submit 'Create', class: 'btn btn-neutral' %>
  <%= link_to 'Back', admin_root_path, class: 'btn btn-outline' %>
<% end %>
